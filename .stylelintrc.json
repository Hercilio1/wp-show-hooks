{
	"extends": "stylelint-config-standard",
	"plugins": [
		"stylelint-scss"
	],
	"customSyntax": "postcss-scss",
	"ignorePath": ["css/**/*"],
	"rules": {
		"indentation": "tab",
		"max-line-length": 100,
		"length-zero-no-unit": null,
		"property-no-vendor-prefix": null,
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"extend",
					"include",
					"mixin",
					"each",
					"function"
				]
			}
		]
	}
}
